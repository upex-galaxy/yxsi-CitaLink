"use client";
import { useState } from "react";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";

export default function NewAppointment() {
  const [loading, setLoading] = useState(false);

  async function onSubmit(e: React.FormEvent<HTMLFormElement>) {
    e.preventDefault();
    setLoading(true);
    const form = new FormData(e.currentTarget);
    try {
      const response = await fetch("/api/appointments", {
        method: "POST",
        body: JSON.stringify(Object.fromEntries(form)),
        headers: { "Content-Type": "application/json" },
      });
      if (response.ok) {
        alert("CitaLink creado (demo). Ver en listado.");
        // Optionally, redirect or clear form
      } else {
        alert("Error al crear CitaLink (demo).");
      }
    } catch (error) {
      console.error("Failed to create appointment link:", error);
      alert("Error de red al crear CitaLink (demo).");
    } finally {
      setLoading(false);
    }
  }

  return (
    <div className="grid flex-1 items-start gap-4">
      <Card>
        <form onSubmit={onSubmit}>
          <CardHeader>
            <CardTitle>Nuevo CitaLink</CardTitle>
            <CardDescription>
              Rellena los datos para crear un nuevo link de pago para una cita.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div className="grid gap-6">
              <div className="grid gap-3">
                <Label htmlFor="patientName">Nombre del Paciente</Label>
                <Input
                  id="patientName"
                  name="patientName"
                  placeholder="Ej: Ana Pérez"
                  required
                />
              </div>
              <div className="grid gap-3">
                <Label htmlFor="appointmentDateTime">Fecha y Hora</Label>
                <Input
                  id="appointmentDateTime"
                  name="appointmentDateTime"
                  placeholder="YYYY-MM-DD HH:mm"
                  required
                />
              </div>
              <div className="grid gap-3">
                <Label htmlFor="totalAmount">Importe Total (€)</Label>
                <Input
                  id="totalAmount"
                  name="totalAmount"
                  type="number"
                  min="0"
                  placeholder="Ej: 100"
                  required
                />
              </div>
            </div>
          </CardContent>
          <CardFooter className="border-t px-6 py-4">
            <Button type="submit" disabled={loading}>
              {loading ? "Creando..." : "Crear CitaLink (demo)"}
            </Button>
          </CardFooter>
        </form>
      </Card>
    </div>
  );
}
